<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Define primary and accent colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Customize Toolbar and ActionBar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="Theme.TaskManager" parent="Base.Theme.TaskManager" />

    <!-- Custom ActionBar style -->
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <!-- Custom Toolbar style -->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Custom ActionBar title style -->
    <style name="CustomActionBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
